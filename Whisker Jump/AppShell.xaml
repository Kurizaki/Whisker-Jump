<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Whisker_Jump.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Whisker_Jump"
    xmlns:local2="clr-namespace:Whisker_Jump.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="Whisker_Jump">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" 
        Shell.NavBarIsVisible="False"/>
    <ShellContent
        Title="Shop"
        ContentTemplate="{DataTemplate local2:ShopPage}"
        Route="ShopPage" 
        Shell.NavBarIsVisible="False"/>
    <ShellContent
        Title="Settings"
        ContentTemplate="{DataTemplate local2:SettingsPage}"
        Route="SettingsPage" 
        Shell.NavBarIsVisible="False"/>

</Shell>
